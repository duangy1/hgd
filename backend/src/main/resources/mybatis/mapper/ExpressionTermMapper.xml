<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ac.cncb.ngdc.syndb.mapper.ExpressionTermMapper">
  <resultMap id="BaseResultMap" type="cn.ac.cncb.ngdc.syndb.entity.ExpressionTerm">
    <id column="hdb_eo_id" jdbcType="INTEGER" property="hdbEoId" />
    <result column="eo_annotation" jdbcType="VARCHAR" property="eoAnnotation" />
    <result column="eo_classification" jdbcType="VARCHAR" property="eoClassification" />
    <result column="classification" jdbcType="VARCHAR" property="classification" />
  </resultMap>
  <sql id="Base_Column_List">
    hdb_eo_id, eo_annotation, eo_classification, classification
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from expression_term
    where hdb_eo_id = #{hdbEoId,jdbcType=INTEGER}
  </select>
  <select id="expressionInfoList" resultMap="BaseResultMap">
    select * from expression_term
    <where>
        <if test="classification=='plant'">
          classification="1"
        </if>
    </where>
  </select>

</mapper>