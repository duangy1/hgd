<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ac.cncb.ngdc.syndb.mapper.TraitNameMapper">
  <resultMap id="BaseResultMap" type="cn.ac.cncb.ngdc.syndb.entity.TraitName">
    <id column="trait_id" jdbcType="INTEGER" property="traitId" />
    <result column="trait_name" jdbcType="VARCHAR" property="traitName" />
    <result column="trait_type" jdbcType="VARCHAR" property="traitType" />
    <result column="definition" jdbcType="LONGVARCHAR" property="definition" />
  </resultMap>


  <select id="selectList" parameterType="java.util.HashMap" resultMap="BaseResultMap">
    select
   * from trait_name where 1=1
    <if test="traitType != null ">
      and trait_type=#{traitType}
    </if>
    order by trait_type
  </select>

    <select id="traitInfoList" resultMap="BaseResultMap">
        select * from trait_name
    </select>

    <select id="traitsItem" resultMap="BaseResultMap">
      select * from trait_name where trait_type=#{classification} limit 0,1
  </select>
</mapper>