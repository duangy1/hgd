<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.ac.cncb.ngdc.syndb.mapper.GeneExpressionMapper">
  <resultMap id="BaseResultMap" type="cn.ac.cncb.ngdc.syndb.entity.GeneExpression">
    <id column="gei_id" jdbcType="INTEGER" property="geiId" />
    <result column="gene_id" jdbcType="VARCHAR" property="geneId" />
    <result column="annotation" jdbcType="VARCHAR" property="annotation" />
    <result column="taxon_id" jdbcType="INTEGER" property="taxonId" />
    <result column="bio_project_id" jdbcType="LONGVARCHAR" property="bioProjectId" />
    <result column="hdb_gene_id" jdbcType="VARCHAR" property="hdbId" />
    <result column="gen_orgid" jdbcType="VARCHAR" property="genOrgId" />
    <result column="common_name" jdbcType="VARCHAR" property="commonName" />
    <result column="classification" jdbcType="VARCHAR" property="classification" />
  </resultMap>
  <resultMap extends="BaseResultMap" id="ResultMapWithBLOBs" type="cn.ac.cncb.ngdc.syndb.entity.GeneExpression">
    <result column="bio_project_id" jdbcType="LONGVARCHAR" property="bioProjectId" />
  </resultMap>
  <sql id="Base_Column_List">
    gei_id, gene_id, annotation, taxon_id
  </sql>
  <sql id="Blob_Column_List">
    bio_project_id
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="ResultMapWithBLOBs">
    select 
    <include refid="Base_Column_List" />
    ,
    <include refid="Blob_Column_List" />
    from gene_expression
    where gei_id = #{geiId,jdbcType=INTEGER}
  </select>
  <select id="expressionInfoByGeneList" resultMap="BaseResultMap">
    select gene_id,gen_orgid,annotation,gene_expression.taxon_id,bio_project_id,gene_expression.hdb_gene_id from gene_expression inner join species on gene_expression.taxon_id=species.taxon_id where hdb_gene_id=#{hdbId}
  </select>
  <select id="initPageEo" resultMap="BaseResultMap">
    select * from gene_expression where annotation=#{expName} and classification=#{classification} and hdb_gene_id !="" and hdb_gene_id is not null
    <if test='taxonid != null and taxonid!="" and taxonid!="null"'>
      and taxon_id = #{taxonid}
    </if>
  </select>
  <select id="expressionGene" resultMap="BaseResultMap">
      select * from gene_expression inner join species on gene_expression.taxon_id=species.taxon_id where hdb_gene_id=#{hdbid}
  </select>
</mapper>